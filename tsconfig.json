{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "verbatimModuleSyntax": false,
    "allowJs": true,
    "resolveJsonModule": true,
    "types": ["node", "jest"],
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "CommonJS",
    "noEmit": true,
    "lib": ["esnext"]
  }
}